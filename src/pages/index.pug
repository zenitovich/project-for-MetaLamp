extends ../layout/default.pug
block title
    title Toxin hotel
block scripts
block content
    include ../components/dropdown/dropdown.pug
    main
        .number-selection 
            form(action="#" method="POST" class="number-selection__form")
                h1 Найдём номера под ваши пожелания
                .inputs
                    .air-datepicker-global-container
                    label.arrival Прибытие
                        input(type="text" class="date-registration" placeholder="ДД.ММ.ГГГГ" id="arrival")
                    label.departure Выезд
                        input(type="text" class="date-registration" placeholder="ДД.ММ.ГГГГ" id="departure")
                .guests-dropdown 
                    +dropdown('Гости', 'Сколько гостей')
                .button-numbers
                    input(type="submit" class="number-selection__submit" value="Подобрать номер")
                    img(src="../img/arrow_forward.svg" alt="Стрелка вправо" class="arrow")

        .slogan Лучшие номера для вашей работы, отдыха, и просто вдохновения
            